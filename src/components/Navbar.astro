---
const currentPath = Astro.url.pathname;
---

<div class="w-full h-16 md:h-20 flex items-center justify-between px-4 md:px-8 fixed top-0 z-50 pt-2 bg-black/30 backdrop-blur-2xl border-b-[0.5px] border-white/10">
	<nav class="flex items-center justify-between w-full h-16 p-2 bg-linear-to-r from-[#FF7A00] via-[#FF3E1F] to-[#FF001F] text-transparent bg-clip-text">
		<div class="flex items-center gap-2 md:gap-4">
			<div class="bg-[#ff6a00] rounded h-8 w-8 md:h-9 md:w-9 flex items-center justify-center">
				<img 
					src="/image.png" 
					alt="ResumeRoast-Logo"
					class="w-6 rounded"
				/>
			</div>
			<a 
				href="/" 
				class="font-medium text-lg md:text-[23px] text-transparent">
				Resume Roast
			</a>
		</div>

		<!-- Desktop Navigation -->
		<div class="hidden md:flex text-white items-center gap-8 lg:gap-14 font-medium text-[16px]">
			<a 
				href="#hero" 
				class="text-white hover:text-transparent duration-300"
			>
				Home
			</a>
			<a 
				href="#features" 
				class="text-white hover:text-transparent duration-300"
			>
				Features
			</a>
			<a 
				href="#how-it-works" 
				class="text-white hover:text-transparent duration-300"
			>
				How It Works
			</a>
			<a 
				href="#pricing" 
				class="text-white hover:text-transparent duration-300"
			>
				Pricing
			</a>
		</div>

		<!-- Desktop Join Whitelist -->
		<div class="hidden md:flex">
			<a
				href="#whitelist"
				class="h-10 w-32 bg-linear-to-r from-[#F97316FF] to-[#DC2626FF] rounded-2xl hover:opacity-90 duration-300 flex items-center justify-center text-white font-medium"
			>
				Join Whitelist
			</a>
		</div>

		<!-- Mobile Menu Button -->
		<button 
			id="mobileMenuButton"
			class="md:hidden text-white"
		>
			<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
				<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
			</svg>
		</button>
	</nav>

	<!-- Mobile Menu -->
	<div id="mobileMenu" class="hidden md:hidden absolute top-16 left-0 w-full bg-black/95 backdrop-blur-2xl border-b border-white/10 py-4">
		<div class="flex flex-col gap-4 px-4">
			<a 
				href="#hero" 
				class="text-white text-base py-2"
			>
				Home
			</a>
			<a 
				href="#about" 
				class="text-white text-base py-2"
			>
				About
			</a>
			<a 
				href="#pricing" 
				class="text-white text-base py-2"
			>
				Pricing
			</a>
			<div class="pt-2 border-t border-white/10">
				<a href="#whitelist" class="bg-gradient-to-r from-[#FF6333FF] to-[#DC2626FF] rounded-3xl w-full h-10 text-white flex items-center justify-center font-medium">
					Join Waitlist
				</a>
			</div>
		</div>
	</div>
</div>

<script>
	document.addEventListener('DOMContentLoaded', () => {
		const mobileMenuButton = document.getElementById('mobileMenuButton');
		const mobileMenu = document.getElementById('mobileMenu');

		mobileMenuButton?.addEventListener('click', () => {
			mobileMenu?.classList.toggle('hidden');
		});
	});
</script>